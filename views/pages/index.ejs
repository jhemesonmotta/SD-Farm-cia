                        <a href="/precedencia" class="btn btn-primary">Consultar</a>
                    </div>
                </div>
            
                <div class="card text-center cardP" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">Listar Remédios</h5>
                        
                        <a href="/listar-remedios" class="btn btn-primary">Listar</a>
                    </div>
                </div>
                    
                <div class="card text-center cardP" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">Enviar Remédios</h5>
                        
                        <a href="/enviar-remedios" class="btn btn-primary">Enviar</a>
                    </div>
                </div>


        </div>


    </div>

