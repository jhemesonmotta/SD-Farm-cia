<!DOCTYPE html>
<html lang="pt-br">

<head>
  <% include ../partials/head.ejs %>
</head>

<body id="body-loaded">
        <div class="container">
            <div class="col-md-12">
                <h2 id="ola">Envie seu remédio</h2>
            </div>
            <hr>
            
            <form class="col-md-4" name="posta" id="formUrl" method="post" target="_self">
                <input type="hidden" style="display: none;" id="currentSharedData">
                <div class="form-group col-md-12">
                    <label for="remedio">Remédio</label>
                    <select class="form-control" id="remedio" name="remedio" required>
                        <% meusRemedios.forEach(function(remedio) { %>
                            <option value="<%= remedio.id %>"><%= remedio.nome %></option>
                        <% }); %>
                    </select>
                </div>
                <div class="form-group col-md-12">
                    <label for="destinatario">Destinatário</label>
                    <select class="form-control" id="destinatario" name="destinatario" required>
                        <% usuariosExistentes.forEach(function(usuario) { %>
                            <option value="<%= usuario.id %>"><%= usuario.nome %></option>
                        <% }); %>
                    </select>
                </div>
                <a href="/"><button type="button" class="qt btn btn-secundary">Voltar</button></a>
                <button type="submit" class="btn btn-success">Enviar remédio</button>
            </form>            
        </div>

        <script>
            // lá no tratamento do post transforma em json
            // executa os métodos para atualizar o blockchain e lista de remédios
            var currentSharedData = localStorage.getItem("currentSharedData");
            $("#currentSharedData").val(currentSharedData);
        </script>

        <% include ../partials/p2pAction.ejs %>

        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    </body>
</html>